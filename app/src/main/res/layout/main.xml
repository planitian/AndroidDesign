<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/keshi"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/tab_bg"
          android:drawablePadding="3dp"
           android:drawableTop="@drawable/tab_keshil"
          android:gravity="center"
          android:padding="5dp"
          android:text="科室"
          android:textColor="@drawable/tab_text"
          android:textSize="16sp"

          />
        <TextView
            android:id="@+id/guahao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_guahao"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@drawable/tab_text"
            android:padding="5dp"
            android:text="挂号"

            />
      <TextView
          android:id="@+id/fav"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/tab_bg"
          android:drawableTop="@drawable/tab_fav"
          android:drawablePadding="3dp"
         android:padding="5dp"
          android:text="收藏"
          android:textSize="16sp"
          android:gravity="center"
          android:textColor="@drawable/tab_text"

          />
        <TextView
            android:id="@+id/my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/tab_bg"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_my"
            android:drawablePadding="3dp"
            android:padding="5dp"
            android:text="用户"
            android:textColor="@drawable/tab_text"
            android:gravity="center"
            android:textSize="16sp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab"
        android:orientation="vertical"
        >

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.v7.widget.Toolbar
                android:id="@+id/maintoolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"></android.support.v7.widget.Toolbar>


        </FrameLayout>

    </LinearLayout>


</RelativeLayout>

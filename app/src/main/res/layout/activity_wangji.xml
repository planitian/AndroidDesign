<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zfh.Activity.WangjiActivity"
    android:background="@color/gray"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/wangjitoolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/phohe">

    </android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/phohe"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="手机号码"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:background="@drawable/shaw"
        android:gravity="left|center"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/yanzhenma"
        android:layout_width="0dp"
        android:layout_height="40dp"

        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/phohe"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/shaw"
        app:layout_constraintRight_toLeftOf="@+id/button"
        android:layout_marginRight="8dp"
        android:gravity="center|left"
        android:textSize="20sp"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/phohe"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/loginbutton"
        app:layout_constraintBaseline_toBaselineOf="@+id/yanzhenma"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>

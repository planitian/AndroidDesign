<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/fukuan_quxiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textSize="32sp"
        android:background="@android:color/transparent"
        android:layout_marginStart="2dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/fukuan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="付款页面"
        android:layout_marginEnd="138dp"
        android:textSize="25sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/fukuan_quxiao"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent" />


    <CheckBox
        android:id="@+id/fukan_zhifubao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付宝支付"
        android:button="@null"
        android:background="@color/white"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/fukuan_quxiao"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.10" />
    <CheckBox
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:button="@null"
        app:layout_constraintTop_toTopOf="@id/fukan_zhifubao"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/fukan_zhifubao"
        android:background="@drawable/checke"
        />


    <CheckBox
        android:id="@+id/fukuan_weixin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信支付"
        android:button="@null"
        android:gravity="left"
        android:background="@color/white"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/fukan_zhifubao"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/fukan_zhifubao" />

    <CheckBox
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:button="@null"
        app:layout_constraintTop_toTopOf="@id/fukuan_weixin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/fukuan_weixin"
        android:background="@drawable/checke"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="添加新的银行卡"
        android:gravity="center|left"
        android:background="#BBFFFF"
        app:layout_constraintLeft_toLeftOf="@id/fukuan_weixin"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/fukuan_weixin"
        android:id="@+id/button2"
        app:layout_constraintHorizontal_bias="0.0" />
    <Button
        android:id="@+id/fukuan_tijiao"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="确定付款"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:textColor="@color/white"
        android:background="@drawable/label_button"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button2" />
</android.support.constraint.ConstraintLayout>
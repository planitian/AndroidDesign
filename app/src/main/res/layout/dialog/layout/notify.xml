<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/notify_youwu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="两小时内有无预约:"
        android:textSize="25sp"
        android:textColor="@color/blue"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

       />
    <TextView
        android:id="@+id/notify_jieguo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有"
        android:textSize="25sp"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/notify_youwu"
        android:layout_alignTop="@+id/notify_youwu"
        android:layout_marginStart="10dp"

        />
    <TextView
        android:id="@+id/notify_shijian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:text="08-01 9:00"
        android:textSize="22sp"
        android:drawableLeft="@drawable/tab_fav"
        android:layout_below="@+id/notify_youwu"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"

        />
</RelativeLayout>